<style>
.form-control{
	width: 150;
}
</style>
<br/><br/>
<div class="container">
<div class="well">
<%= form_tag create_problem_path(), :method => :get, :class => "form-horizontal" do %>
  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2 control-label">Title</label>
    <div class="col-sm-6">
      <input  name="title" class="form-control" id="inputEmail3" placeholder="Title">
    </div>
  </div>
  <div class="form-group">
    <label for="inputPassword3" class="col-sm-2 control-label">Problem Statement</label>
    <div class="col-sm-6">
      <textarea class="form-control" name="statement"  rows="15" placeholder="Describe Your Problem Here"></textarea>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-6">
      <button type="submit" class="btn btn-primary">Add Problem</button>
    </div>
  </div>
<%end%>
</div>
</div>