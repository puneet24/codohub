<div class="container">


<%@chat_history.each do |chat_history|%>
<div class="well">
	<div class="row">
		<div class="col-md-1"><b>Sender</b> &nbsp;</div>
		<div><%=User.where(:id=> chat_history.sender_id).first.email%></div>
		
	</div>
	<div class="row">
		<div class="col-md-1"><b>Message</b> &nbsp;</div>
		<div><%=chat_history.message%></div>
	</div>
</div>
	<br/>
<%end%>

<%= form_tag create_mail_path(:ticket_id=>@ticket_id), :method => :post, :class => "form-horizontal" do %>
  <div class="form-group">
    <label for="inputEmail3" class="control-label">Email</label>
    <div>
      <input type="email" name="email" class="form-control" id="inputEmail3" placeholder="Email" value="<%= User.where(:id=> @rec_id).first.email%>"readonly>
    </div>
  </div>
  <div class="form-group">
    <label for="inputPassword3" class=" control-label">Message</label>
    <div>
      <textarea class="form-control" name="message" rows="3"></textarea>
    </div>
  </div>
  <div class="form-group">
    <div>
      <button type="submit" class="btn btn-primary">Send Mail</button>
    </div>
  </div>
<%end%>

</div>